@import 'utils/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 20px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: right;
  font-size: 14px;
}

.card {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  flex-direction: row;
  display: flex;
}

.card_title {
  font-size: 16px;
  text-align: left;
}

.card__desc {
  margin-top: 5px;
  color: #888;
  text-align: right;
  font-size: 13px;
}

.card_content {
  width: 100%;
  margin-left: 20rpx;
  flex-direction: column;
  display: flex;
}

.card_head {
  font-size: 33px;
  color: #1aad19;
  width: 100rpx;
  text-align: center;
}

.photo {
  flex-direction: column;
  display: flex;
}

.photo_title {
  text-align: left;
  font-size: 16px;
}

.photo_content {
  margin-top: 5px;
  text-align: left;
  font-size: 13px;
  color: #888;
}
